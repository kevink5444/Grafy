<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/card_profile">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:id="@+id/txt_1"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/card_kolomprof">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kompo"
            android:layout_margin="20dp"
            android:id="@+id/img_1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_profil"
            android:text="Ubah Profil"
            android:textAlignment="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama                :       Farhan Kebab"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:id="@+id/txt_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir   :       Belum Diatur"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:id="@+id/txt_3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin  :       Belum Diatur"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"
            android:id="@+id/txt_4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio                     :       Hello, I'm Here"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:id="@+id/txt_5"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>